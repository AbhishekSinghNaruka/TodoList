<%- include('login-partials/header') %>

<div class="container h-100">

  <div class="row h-100 align-items-center justify-content-center">

    <div class="col-lg-6 col-md-8 col-xl-4 login-box">
      <div class="login-title">Login</div>

        <div class="login-form">

          <form action="/login" method="POST">

            <div class="form-group">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="form-group">
              <label for="password" class=form-label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn  btn-outline-primary login-button">Login</button>

          </form>

           <p class="login-signUp">Don't have an account? <a  href="/register">Sign up</a></p>

          </div>

    </div>

  </div>

</div>
<%- include('login-partials/footer') %>
